/* To learn more about Typescript configuration file: https://www.typescriptlang.org/docs/handbook/tsconfig-json.html. */
/* To learn more about Angular compiler options: https://angular.dev/reference/configs/angular-compiler-options. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2022",
    "module": "preserve",
    "baseUrl": "./",
    "paths": {
      "@core/app/*": ["src/core/*"],
      "@modules-chat-ui/*": ["src/modules/chat/components/ui/*"],
      "@modules-chat-domain/*": ["src/modules/chat/components/domain/index.ts"],
      "@modules-chat-interfaces/*": ["src/modules/chat/interfaces/*"],
      "@modules-chat-guards/*": ["src/modules/chat/guards/*"],
      "@modules-server-ui/*": ["src/modules/server/components/ui/*"],
      "@modules-discover-ui/*": ["src/modules/discover/components/ui/*"]
    }
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  },
  "files": [],
  "references": [
    {
      "path": "./tsconfig.app.json"
    },
    {
      "path": "./tsconfig.spec.json"
    }
  ]
}
