{
  "name": "chat-code",
  "version": "0.0.0",
  "main": "electron/main.js",
  "homepage": "./",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "electron:serve": "ng build --base-href ./ && electron .",
    "electron:dev": "ng serve & electron .",
    "build:desktop": "ng build --configuration production --base-href ./ && electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "packageManager": "npm@10.9.2",
  "dependencies": {
    "@angular/cdk": "^21.0.2",
    "@angular/common": "^21.0.0",
    "@angular/compiler": "^21.0.0",
    "@angular/core": "^21.0.0",
    "@angular/fire": "^21.0.0-rc.0",
    "@angular/forms": "^21.0.0",
    "@angular/material": "^21.0.2",
    "@angular/platform-browser": "^21.0.0",
    "@angular/router": "^21.0.0",
    "firebase": "^12.6.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular/build": "^21.0.2",
    "@angular/cli": "^21.0.2",
    "@angular/compiler-cli": "^21.0.0",
    "@electron/remote": "^2.1.3",
    "electron": "^39.2.6",
    "electron-builder": "^26.0.12",
    "jsdom": "^27.1.0",
    "typescript": "~5.9.2",
    "vitest": "^4.0.8"
  },
  "build": {
    "appId": "com.chatcode.desktop",
    "productName": "Chat Code",
    "files": [
      "dist/**/*",
      "electron/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}